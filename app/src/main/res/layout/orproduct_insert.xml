<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        style="@style/TextAppearance.Compat.Notification.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:gravity="center"
        android:padding="14dp"
        android:text="Add Order Details"
        android:textColor="#fff"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/orproductname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Product Name : (Ex - Black Bottom Cupcake)" />

    <EditText
        android:id="@+id/orproductid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Product ID : (Ex - BC001)" />

    <EditText
        android:id="@+id/orproductflavour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Product Flavour : (Ex - Chocolate/Vanilla/....)" />
    <EditText
        android:layout_margin="5dp"
        android:id="@+id/orproductqty"
        android:hint="Product Qty : (Ex - 5)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/orcusname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Customer Name : (Ex - Alan Walker) " />

    <EditText
        android:layout_margin="5dp"
        android:id="@+id/orcuscontact"
        android:hint="Customer Contact No : (Ex - +9477890####)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/orstatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Order Status : (Don't fill this. Use for admin)"
        android:textColor="#FF1403" />

    <Button
        android:id="@+id/orinsert_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/primary"
        android:text="Add"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>